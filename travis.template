sudo: required

language: bash
services: docker

env:
%%VERSIONS%%

before_install:
  - sudo apt-get update
  - sudo apt-get -y -o Dpkg::Options::="--force-confnew" install docker-engine

before_script:
  - env | sort
  - image="ffmpeg:${VERSION}-${VARIANT:-ubuntu}"

script:
  - docker build -t "${image}" ${VERSION}/${VARIANT}

after_script:
  - docker images
